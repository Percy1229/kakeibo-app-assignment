<div class="text-center">
  <h1>Log in</h1>
</div>

<div class="row">
  <div class="col-sm-6 offset-sm-3">

<%= form_with(url: login_path, scope: :session, local: true) do |f| %>

      <div class="form-group">
      <i class="fas fa-envelope"></i>
<%= f.label :email, 'Email' %>
<%= f.email_field :email, class: 'form-control', placeholder: 'Enter your email' %>
      </div>

      <div class="form-group">
      <i class="fas fa-lock-open"></i>
<%= f.label :password, 'Password' %>
<%= f.password_field :password, class: 'form-control', placeholder: 'Enter your password' %>
      </div>

<%= f.submit 'Log in', class: 'btn btn-primary btn-block' %>

<% end %>


    <p>
<%= link_to 'Create a new account', signup_path %>
</p>
  </div>
</div>