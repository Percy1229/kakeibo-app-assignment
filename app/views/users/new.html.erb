<!--ユーザー登録画面-->

<div class="user-overall">
      <span class="user-title">Sign up</span>
      <%= form_with(model: @user, local: true) do |f| %>

<%= render 'layouts/error_messages', model: f.object %>

      <div class="form-group">
      <i class="fas fa-user"></i>
<%= f.label :name, 'Name' %>
<%= f.text_field :name, class: 'form-control', placeholder: 'Enter your nickname' %>
      </div>

      <div class="form-group">
      <i class="fas fa-envelope"></i>
<%= f.label :email, 'Email' %>
<%= f.email_field :email, class: 'form-control', placeholder: 'Enter your valid Email' %>
      </div>
      
      <div class="form-group">
      <i class="fas fa-crown"></i>
<%= f.label :goal, 'Goal' %>
<%= f.text_field :goal, class: 'form-control', placeholder: 'Enter your goal in this year' %>
      </div>

      <div class="form-group">
      <i class="fas fa-key"></i>
<%= f.label :password, 'Password' %>
<%= f.password_field :password, class: 'form-control', placeholder: 'Enter your password' %>
      </div>

      <div class="form-group">
      <i class="fas fa-lock"></i>
<%= f.label :password_confirmation, 'Confirmation' %>
<%= f.password_field :password_confirmation, class: 'form-control', placeholder: 'Enter your password again'%>
      </div>
      
<%= f.submit 'Sign up', class: 'btn btn-block user-btn' %>
<% end %>
</div>



