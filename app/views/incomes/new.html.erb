<!--収入を登録する画面-->
<div class="content container">
<div class="row">
<div class="col-sm-6 offset-sm-3">
<h1 class="pt-4 pb-2">Income</h1>
<%= form_with(model: @income, local: true) do |f| %>
<%= render 'layouts/error_messages', model: f.object %>

<div class="form-group">
    <%= f.label :date, 'Date' %>
    <%= f.date_select :date, class: 'form-control'%>
</div>

<div class="form-group">
    <%= f.label :source, 'Source of Income' %>
    <%= f.select :source, [["Part-time job", "parttime"], ["Internship", "internship"], ["Volunteer", "volunteer"], ["Others", "others"]], :prompt => "Select Your source of income" %>
</div>

<div class="form-group">
    <%= f.label :income, 'Income' %>
    <%= f.text_field :income, class: 'form-control'%>
</div>

<%= f.submit 'Register', class: 'btn button btn-block btn-primary' %>

<% end %>
</div>
</div>
</div>
