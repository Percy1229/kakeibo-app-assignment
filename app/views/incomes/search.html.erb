<!--収入の検索ページ-->
<div class="search-overall">
   <h1>Income search</h1>
    <div class="engine form-group">
        <%= form_tag(incomes_search_path, method: "get") do %>
        <%= select_tag(:date, options_for_select(@date), :prompt => "All incomes", class: "select-box form-control")  %>
        <%= submit_tag "Search", class: "btn search-btn" %>
        <% end %>
    </div>
    
    <h3>Result</h3>
    <table border=1>
    <thead>
        <tr class="income-th">
            <th>Date</th>
            <th>Source of Income</th>
            <th>Income</th>
            <th>Edit & Delete</th>
        </tr>
    </thead>
    <tbody>
        <% @incomes.each do |income| %>
        <tr>
            <td>
          

            </td>
             <td>
                <%= income.source %>
            </td>
             <td>
                <span>¥</span><%= income.income %>
            </td>
            <td>
                <%= link_to "Edit", edit_income_path(income), class: 'btn btn-primary btn-sm' %>
                <%= link_to "Delete", income, method: :delete, data: { confirm: "Are you sure?"}, class: 'btn btn-danger btn-sm' %>
            </td>
        </tr>
         <% end %>
    </tbody
</div>
