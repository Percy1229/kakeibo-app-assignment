<div class="content container">
<div class="row">
<div class="col-sm-6 offset-sm-3">
<h1 class="pt-4 pb-2">Expense</h1>
<%= form_with(model: @list, local: true) do |f| %>

<div class="form-group">
    <%= f.label :date, 'Date' %>
    <%= f.date_select :date, class: 'form-control'%>
</div>

<div class="form-group">
    <%= f.label :item_name, 'Item' %>
    <%= f.text_field :item_name, class: 'form-control'%>
</div>

<div class="form-group">
    <%= f.label :expense, 'Expense' %>
    <%= f.number_field :expense, class: 'form-control', placeholder: "Enter your expense" %>
</div>

<div class="form-group">
    <%= f.label :place, 'Place' %>
    <%= f.text_field :place, class: 'form-control', placeholder: "Enter place" %>
</div>

<%= f.submit 'POST', class: 'btn button btn-block' %>

<% end %>
</div>
</div>
</div>
