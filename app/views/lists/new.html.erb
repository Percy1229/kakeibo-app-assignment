<!--支出を登録する画面-->

<div class="content container">
<div class="row">
<div class="col-sm-6 offset-sm-3">
<h1 class="pt-4 pb-2">Expense</h1>
<%= form_with(model: @list, local: true) do |f| %>
<%= render 'layouts/error_messages', model: f.object %>

<div class="form-group">
    <i class="far fa-calendar-alt"></i>
    <%= f.label :date, 'Date' %>
    <%= f.date_select :date, class: 'form-control'%>
</div>

<div class="form-group">
    <i class="fas fa-shopping-cart"></i>
    <%= f.label :item_name, 'Item' %>
    <%= f.text_field :item_name, class: 'form-control', placeholder: "Enter the item name"%>
</div>

<div class="form-group">
    <i class="fas fa-list"></i>
    <%= f.label :category, 'Category' %>
    <%= f.select :category, 
    [["Unclassifed", "unclassifed"],
    ["Utensil", "utensil"],
    ["Utility(water/heat)", "utility"],
    ["Hobby", "hobby"],
    ["Entertainment", "entertainment"],
    ["Transportation", "transportation"], 
    ["Fashion", "fashion"], 
    ["Food", "food"], 
    ["Phone", "phone"], 
    ["Others", "others"]], 
    :prompt => "Select category" %>
</div>

<div class="form-group">
    <i class="fas fa-coins"></i>
    <%= f.label :expense, 'Expense' %>
    <%= f.number_field :expense, class: 'form-control', placeholder: "Enter the expense" %>
</div>


<div class="form-group">
    <i class="fas fa-building"></i>
    <%= f.label :place, 'Place' %>
    <%= f.text_field :place, class: 'form-control', placeholder: "Enter the place" %>
</div>

<%= f.submit 'POST', class: 'btn button btn-block btn-primary' %>

<% end %>
</div>
</div>
</div>
