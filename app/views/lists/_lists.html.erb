<!--支出一覧のパーシャル-->
<h1>Japanese Kakeibo</h1>
<div class="center container">
    <table border=1>
    <thead>
        <tr>
            <th>Date</th>
            <th>Item</th>
            <th>Expense</th>
            <th>Place</th>
            <th>Edit & Delete</th>
        </tr>
    </thead>
    <tbody>
        <% lists.each do |list| %>
        <tr>
            <td>
                <%= list.date %>

            </td>
             <td>
                <%= list.item_name %>
            </td>
             <td>
                <span>¥</span><%= list.expense %>
            </td>
             <td>
                <%= list.place %>
            </td>
            <td>
                <%= link_to "Edit", edit_list_path(list), class: 'btn btn-primary btn-sm' %>
                <%= link_to "Delete", list, method: :delete, data: { confirm: "Are you sure?"}, class: 'btn btn-danger btn-sm' %>
            </td>
        </tr>
         <% end %>
    </tbody>
</table>
 <div>
        <p>Total Expense: ¥<%= expense_total %></p>
    </div>
    <%= paginate lists %>
    
    <table border=1>
    <thead>
        <tr>
            <th>Date</th>
            <th>Source of Income</th>
            <th>Income</th>
            <th>Edit & Delete</th>
        </tr>
    </thead>
    <tbody>
        <% incomes.each do |income| %>
        <tr>
            <td>
                <%= income.date %>

            </td>
             <td>
                <%= income.source %>
            </td>
             <td>
                <span>¥</span><%= income.income %>
            </td>
            <td>
                <%= link_to "Edit", edit_income_path(income), class: 'btn btn-primary btn-sm' %>
                <%= link_to "Delete", income, method: :delete, data: { confirm: "Are you sure?"}, class: 'btn btn-danger btn-sm' %>
            </td>
        </tr>
         <% end %>
    </tbody>
</table>
<div>
    <p>Total Income: ¥<%= income_total %></p>
</div>
    <%= paginate incomes %>

<div>
    <p>Total Balance: ¥<%= total %></p>
</div>
</div>

